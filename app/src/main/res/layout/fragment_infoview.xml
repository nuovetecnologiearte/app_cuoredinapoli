<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="220dp"
    android:layout_height="140dp"
    android:background="@color/colorPrimary"
    android:orientation="horizontal">


    <TextView
        android:id="@+id/intestazione"
        android:layout_width="93dp"
        android:layout_height="45dp"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space2"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/snippet"
        android:layout_width="92dp"
        android:layout_height="83dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="10dp"
        android:textSize="17sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toStartOf="@+id/space"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intestazione"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/anteprima"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:src="@drawable/giappo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space"
        android:layout_width="6dp"
        android:layout_height="140dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/anteprima"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Space
        android:id="@+id/space2"
        android:layout_width="113dp"
        android:layout_height="6dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintEnd_toEndOf="@+id/space"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Space
        android:id="@+id/space3"
        android:layout_width="113dp"
        android:layout_height="6dp"
        android:layout_marginEnd="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/space"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/snippet"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>
